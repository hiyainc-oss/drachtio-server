
## git clone --depth=50 --branch=develop git://github.com/davehorton/drachtio-server.git /usr/local/src/drachtio-server
## git submodule update --init --recursive

autoreconf --install
mkdir build.d
cd build.d
../configure CPPFLAGS='-DNDEBUG' CXXFLAGS='-O0'
make
## make install \

## apt-get purge -y --quiet --force-yes --auto-remove gcc g++ make cmake build-essential git autoconf automake libtool libtool-bin
## rm -rf /usr/local/src/drachtio-server /var/lib/apt/* /var/lib/dpkg/* /var/lib/cache/* /var/log/* /var/lib/apt/lists/*

## cd /usr/local/bin
## rm -f timer ssltest parser uri_test test_https test_asio_curl

## COPY ./docker.drachtio.conf.xml /etc/drachtio.conf.xml
## COPY ./entrypoint.sh /
## VOLUME ["/config"]
## ENTRYPOINT ["/entrypoint.sh"]
## CMD ["drachtio"]
